{
    "root": true,
    "parserOptions": {
         "ecmaVersion": 12,
         "sourceType": "module"
    },
    "extends": ["eslint:recommended", "eslint-config-prettier"],
    "plugins": ["prettier", "eslint-plugin-prettier"],
    "env": { 
         "es2021": true,
         "node": true
    },
    "rules": {
         "prettier/prettier": "error",
         "no-constant-condition": "off"
    }
}